@model IEnumerable<DataLayer.Activity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>لیست فعالیت ها</h2>

<p>
    <a class="btn btn-success" href="/Admin/Activities/Create">ایجاد فعالیت جدید</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ActiveImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActiveTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="/Images/Activity/@item.ActiveImage" class="thumbnail"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveTitle)
            </td>
            <td>
                <a class="btn btn-sm btn-info" href="/Admin/Activities/Details/@item.ActiveID"><i class="glyphicon glyphicon-zoom-in"></i></a>

                <a class="btn btn-sm btn-warning" href="/Admin/Activities/Edit/@item.ActiveID"> <i class="glyphicon glyphicon-edit"></i></a>

                <a class="btn btn-sm btn-danger" href="/Admin/Activities/Delete/@item.ActiveID"> <i class="glyphicon glyphicon-trash"></i> </a>
            </td>
        </tr>
    }

</table>
